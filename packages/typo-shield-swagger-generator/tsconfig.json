{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*.**"
  ],
  "exclude": [
    "dist"
  ]
}