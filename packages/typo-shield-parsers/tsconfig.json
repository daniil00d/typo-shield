{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": [
    "src/**/*.**"
  ],
  "exclude": [
    "dist",
    "./src/core",
    "./src/drafts"
  ],
  "lib": [
    "es2015"
  ],
}