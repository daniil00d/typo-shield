{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["./src/core/*"]
    }
  },
  "include": ["src/**/*.**"],
  "exclude": ["dist"],
  "lib": ["es2015"],
  "paths": {
    "@core/*": ["./src/core*"]
  }
}
