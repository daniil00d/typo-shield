{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@compiler/*": ["./src/antlr-ts-compiler/*"],
      "@server/*": ["./src/server/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.**"],
  "exclude": ["dist"],
  "lib": ["es2015"],
  "paths": {
    "@core/*": ["./src/core*"]
  }
}
